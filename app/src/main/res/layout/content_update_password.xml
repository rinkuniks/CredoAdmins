<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.UpdatePassword"
        tools:showIn="@layout/activity_update_password">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.4">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPDATE PASSWORD"
                    android:layout_marginTop="20dp"
                    android:textColor="#78c5ef"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:layout_weight="1">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">
                <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    <ImageView
                            android:id="@+id/imageViewPassword"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/password_svg"
                            tools:ignore="VectorDrawableCompat"/>
                </RelativeLayout>

                <EditText
                        android:id="@+id/newPasswordChangePassword"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:layout_marginStart="70dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:hint="New Password"
                        android:layout_height="wrap_content" />

                <ImageView
                        android:id="@+id/passwordImageShowUpdate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/eye_svg_change"
                         tools:ignore="VectorDrawableCompat"/>
                <ImageView
                        android:visibility="gone"
                        android:id="@+id/passwordImageHideUpdate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/eye_closed_svg_change"
                        tools:ignore="VectorDrawableCompat"/>

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#D3D3D3"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp">
                <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/password_svg"
                            tools:ignore="VectorDrawableCompat"/>
                </RelativeLayout>

                <EditText
                        android:id="@+id/repeatNewPassword"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:layout_marginStart="70dp"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:hint="Repeat New Password"
                        android:layout_height="wrap_content" />

                <ImageView
                        android:id="@+id/repeatPasswordImageShowUpdate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/eye_svg_change"
                        tools:ignore="VectorDrawableCompat"/>
                <ImageView
                        android:visibility="gone"
                        android:id="@+id/repeatPasswordImageHideUpdate"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/eye_closed_svg_change"
                        tools:ignore="VectorDrawableCompat"/>

            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="#D3D3D3"/>

            <Button
                    android:id="@+id/submitButtonUpdatePassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="SUBMIT"
                    android:background="@drawable/submitbuttonlogin"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginBottom="25dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>