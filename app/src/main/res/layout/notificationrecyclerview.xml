<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="1dp"
            android:elevation="12dp"
            android:background="@drawable/card_view_back_dash_board"
            android:layout_height="wrap_content"
            tools:targetApi="LOLLIPOP"
            tools:ignore="UnusedAttribute">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="match_parent"
                    android:text="04 JUNE"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:id="@+id/datedisplay"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="#DCDCDC"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:text="Title Notification"
                    android:id="@+id/titlenotification"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Notification Detail"
                    android:textColor="#000"
                    android:layout_below="@+id/titlenotification"
                    android:id="@+id/detailnotification"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_below="@+id/detailnotification"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:textColor="#000"
                        android:text="Date :"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:text="29/02/2020"
                            android:textColor="#000"
                            android:id="@+id/datenotification"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>