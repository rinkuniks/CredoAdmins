<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view_dash_adaptor"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/card_view_back_dash_board"
            android:elevation="12dp"
            android:layout_margin="10dp"
            tools:targetApi="lollipop">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/individualSchoolTouch"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:id="@+id/circularimageschool"
                    android:layout_margin="5dp"
                    android:src="@drawable/app_icon"
                    android:layout_height="match_parent"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"

                        android:layout_height="match_parent">

                    <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/schoolname"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:paddingEnd="10dp"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:text="DELHI PUBLIC SCHOOL"
                            android:layout_height="match_parent"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/schooladdress"
                            android:textColor="#000"
                            android:layout_weight="1.3"
                            android:paddingEnd="10dp"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:text="Ameerpet"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="match_parent"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/schoolcity"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="Hyderabad"
                            android:gravity="center_vertical"
                            android:layout_weight="1.3"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>