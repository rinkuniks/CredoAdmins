<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_change_password"
        tools:context=".ui.ChangePassword">
    <RelativeLayout
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:layout_margin="20dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/linear_layout_request_id_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/password"
                    android:layout_centerVertical="true"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_toEndOf="@+id/image_1"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/old_password_chnage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:focusable="false"
                        android:hint="Old Password" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <View
                android:id="@+id/view_1"
                android:layout_below="@+id/linear_layout_request_id_1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#E5E7E9"/>

        <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/view_1"
                android:id="@+id/linear_layout_request_id_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/password"
                    android:layout_centerVertical="true"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_toEndOf="@+id/image_2"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/new_password_chnage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:focusable="false"
                        android:hint="New Password" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <View
                android:layout_below="@+id/linear_layout_request_id_2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#E5E7E9"/>

        <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linear_layout_request_id_2"
                android:id="@+id/linear_layout_request_id_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/password"
                    android:layout_centerVertical="true"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_toEndOf="@+id/image_3"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/repeat_password_chnage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:focusable="false"
                        android:hint="Repeat New Password" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <View
                android:layout_below="@+id/linear_layout_request_id_3"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#E5E7E9"/>

    </RelativeLayout>

    <Button
            android:id="@+id/button_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:text="CHANGE PASSWORD"
            android:layout_marginBottom="25dp"
            android:background="@drawable/submitbuttonlogin"/>

</LinearLayout>