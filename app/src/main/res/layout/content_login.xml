<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.Login">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/linearlayoutimage"
                android:orientation="vertical">


            <ImageView
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_below="@+id/linearlayoutimage"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_marginTop="50dp"
                        android:id="@+id/relativelayoutmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/imagemobile"
                            android:layout_width="25dp"
                            android:layout_centerVertical="true"
                            android:layout_height="25dp"/>

                    <EditText
                            android:id="@+id/loginMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/imagemobile"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:textSize="25sp"
                            android:maxLength="10"
                            android:background="@null"
                            android:layout_marginBottom="5dp"
                            android:hint="Mobile"/>

                </RelativeLayout>

                <View
                        android:id="@+id/view_1"
                        android:layout_below="@+id/relativelayoutmobile"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D3D3D3"/>

                <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/view_1"
                        android:id="@+id/relativelayoutPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/imagepassword"
                            android:layout_width="25dp"
                            android:layout_centerVertical="true"
                            android:layout_height="25dp"/>

                    <EditText
                            android:id="@+id/loginPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@+id/imagepassword"
                            android:paddingStart="10dp"
                            android:inputType="textPassword"
                            android:textSize="25sp"
                            android:maxLength="10"
                            android:background="@null"
                            android:layout_marginBottom="5dp"
                            android:hint="Password"/>

                </RelativeLayout>

                <View
                        android:id="@+id/view_2"
                        android:layout_below="@+id/relativelayoutPassword"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D3D3D3"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_below="@+id/view_2"
                        android:layout_marginTop="30dp"
                        android:text="Request For Demo"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:id="@+id/textViewRequest"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/linearlayoutsubmit"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:text="Submit"
                            android:textColor="#FFF"
                            android:textSize="25sp"
                            android:id="@+id/loginSubmit"
                            android:background="@drawable/submitbuttonlogin"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/loginforgotpassword"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:text="Forgot Password ?"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>